<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >


    <View
        android:id="@+id/containerComponentsp"
        style="@style/Edit_textl"
        android:layout_width="400dp"
        android:layout_height="140dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_veiculo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/containerComponentsp"
        app:layout_constraintBottom_toBottomOf="@+id/containerComponentsp"
        app:srcCompat="@drawable/ic_carro" />


    <TextView
        android:id="@+id/txtplaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placa:"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/txtmodelo"
        app:layout_constraintTop_toBottomOf="@+id/txtmodelo" />

    <TextView
        android:id="@+id/txtmodelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="Modelo:"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/imageView_veiculo"
        app:layout_constraintTop_toTopOf="@id/containerComponentsp" />


    <TextView
        android:id="@+id/text_placa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="XRR-1458"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/txtplaca"
        app:layout_constraintTop_toTopOf="@id/txtplaca" />

    <TextView
        android:id="@+id/text_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="5dp"
        android:text="Corsa"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:typeface="serif"
        app:layout_constraintTop_toTopOf="@+id/txtmodelo"
        app:layout_constraintStart_toEndOf="@+id/txtmodelo" />

</androidx.constraintlayout.widget.ConstraintLayout>