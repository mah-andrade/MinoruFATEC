<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="155dp">


    <View
        android:id="@+id/containerComponentsp"
        style="@style/Edit_textl"
        android:layout_width="390dp"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/imageView_func"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="@id/containerComponentsp"
        app:layout_constraintTop_toTopOf="@+id/containerComponentsp"
        app:layout_constraintBottom_toBottomOf="@id/containerComponentsp"
        app:srcCompat="@drawable/ic_user" />

    <TextView
        android:id="@+id/txttelfunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:typeface="serif"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/txtnome"
        app:layout_constraintTop_toBottomOf="@+id/txtnome" />

    <TextView
        android:id="@+id/txtnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:text="Nome:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:typeface="serif"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView_func"
        app:layout_constraintTop_toTopOf="@id/containerComponentsp" />

    <TextView
        android:id="@+id/txtemailfunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Cargo:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="@+id/txttelfunc"
        app:layout_constraintTop_toBottomOf="@+id/txttelfunc" />


    <TextView
        android:id="@+id/text_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1151515951"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/txttelfunc"
        app:layout_constraintTop_toTopOf="@id/txttelfunc" />

    <TextView
        android:id="@+id/text_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Douglas"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/txtnome"
        app:layout_constraintTop_toTopOf="@+id/txtnome" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="aaaaaa@gmail.com"
        android:textSize="16sp"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/txtemailfunc"
        app:layout_constraintStart_toEndOf="@+id/txtemailfunc"
/>

</androidx.constraintlayout.widget.ConstraintLayout>