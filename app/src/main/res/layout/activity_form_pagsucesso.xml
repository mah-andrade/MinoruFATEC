<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/fundo2"
    android:layout_height="match_parent"
    tools:context=".forms.telacliente_layout.form_pagsucesso">


    <ImageView
        android:id="@+id/sucesso"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/sucesso"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/txtconfirma"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Confirmado"
        android:textColor="@color/Verde"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:typeface="monospace"
        app:layout_constraintTop_toBottomOf="@+id/sucesso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtpagsuc"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Pagamento realizado com sucesso"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:typeface="monospace"
        app:layout_constraintTop_toBottomOf="@+id/txtconfirma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>